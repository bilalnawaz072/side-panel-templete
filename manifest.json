{
    "manifest_version": 3,
    "name": "Side Panel Extension",
    "version": "1.0",
    "description": "A Chrome extension with a side panel and context menu",
    "permissions": [
      "sidePanel",
      "contextMenus"
    ],
    "action": {
      "default_title": "Open Side Panel"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }